<section class="form-auth text-center">

<%= form_for @property do |f| %>
<div class="field">

  <%= f.label :name %><br>
  <%= f.text_field :name %>
  <br>
</div>
<div class="field">

  <%= f.label :address %><br>
  <%= f.text_field :address %>
  <br>
</div>

  <div class="field">

  <%= f.label :price %><br>
  <%= f.text_field :price %>
  <br>
</div>

  <div class="field">

  <%= f.label :rooms %><br>
  <%= f.text_field :rooms %>
  <br>
  <div class="field">

  <%= f.label :bathrooms %><br>
  <%= f.text_field :bathrooms %>
  <br>
</div>

  <div class="field">

  <%= f.label :image, 'Image URL' %><br>
  <%= f.text_field :image %>

  <br>
  <br>
</div>

<div class="field">

  <%= f.submit %>
</div>

<% end %>
</section>
